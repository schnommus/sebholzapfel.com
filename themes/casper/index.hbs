{{!< default}}
{{! The tag above means - insert everything in this file into the {body} of the default.hbs template }}

{{! The big featured header }}
<header class="main-header {{#if @blog.cover}}" style="background-image: url({{@blog.cover}}){{else}}no-cover{{/if}}">
    <nav class="main-nav overlay clearfix">
        {{#if @blog.logo}}<a class="blog-logo" href="{{@blog.url}}"><img src="{{@blog.logo}}" alt="{{@blog.title}}" /></a>{{/if}}
        {{#if @blog.navigation}}
            <a class="menu-button icon-menu" href="#"><span class="word">Menu</span></a>
        {{/if}}
    </nav>
    <div class="vertical">

        {{#foreach posts}}
            {{#if featured}}
                <div style="background: url({{image}}); background-size: 100% 100%; width: 350px; height: 200px; border-radius: 10px; overflow: hidden; position: relative;" >
                    <a href={{url}}>
                        <div> <!-- spaaaace --> </div>
                        <div style="background: rgba(0, 0, 0, 0.5); position: absolute; bottom: 0; width: 100%">
                            <h2 class="page-description" style="font-size: 1.5rem; color: rgba(255,255,255,1);"><b>{{{title}}}</b> </h2>
                            <section class="page-description" style="font-size: 1.1rem; color: rgba(255,255,255,1);">
                                <p style="margin: 0px 0px 0.3em;">{{excerpt words="20"}} ...</p>
                            </section>
                        </div>
                    <!--<p>({{date format="DD/MM/YY"}})</p>-->
                    </a>
                </div>
            {{/if}}
        {{/foreach}}

        <div class="main-header-content inner">

            <style type="text/css">
                #wrap {
                    width:550px;
                    margin:0 auto;
                }
                #left_col {
                    float:left;
                    width:150px;
                }
                #right_col {
                    float:right;
                    width:400px;
                }
            </style>
            
            <div id="wrap">
                <div id="left_col">
                    <img src="{{@blog.logo}}" alt="{{@blog.title}}" />
                </div>

                <div id="right_col">
                    <h1 class="page-title">
                        {{@blog.title}}
                    </h1>
                    <h2 class="page-description">{{{@blog.description}}}</h2>
                </div>
            </div>
            
        </div>
        <br><br><br><br>
        <div class="main-header-content inner">
            <br><br>
            <a href="/projects/" class="link-res"><b>Projects</b></a>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
            <a href="/resume/" class="link-res"><b>Resum√©/CV</b></a>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
            <a href="#content" class="link-res"><b>Blog</b></a>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
            <a href="/contact/" class="link-res"><b>Contact</b></a>
            <br><br>
            <style>
            .btn-outline { margin-top: 15px; border: solid 1px #FFFFFF; font-size: 24px; color: #FFFFFF; background: 0 0; transition: all .3s ease-in-out; }
            .btn-outline:hover, .btn-outline:focus, .btn-outline:active, .btn-outline.active { border: solid 1px #FFFFFF; color: #000; background: #FFFFFF; }
            .btn-social { display: inline-block; width: 48px; height: 48px; border: 1px solid #FFFFFF; border-radius: 100%; text-align: center; font-size: 24px; line-height: 46px; }
            .link-res { font-size: 24px; color: #FFFFFF; text-decoration: none; }
            .link-res:hover { font-size: 24px; color: #555555 }
            </style>
            <a href="/contact/" class="btn-social btn-outline" title="Email"><i class="fa fa-fw fa-envelope"></i></a>&nbsp;&nbsp;&nbsp;&nbsp;
            <a href="https://bitbucket.org/schnommus/" class="btn-social btn-outline" data-toggle="tooltip" data-placement="top" title="Bitbucket"><i class="fa fa-fw fa-bitbucket "></i></a>&nbsp;&nbsp;&nbsp;&nbsp;
            <a href="https://au.linkedin.com/in/sebholzapfel" class="btn-social btn-outline" title="LinkedIn"><i class="fa fa-fw fa-linkedin"></i></a>&nbsp;&nbsp;&nbsp;&nbsp;
            <a href="http://stackoverflow.com/users/604945/schnommus" class="btn-social btn-outline" title="Stack Overflow"><i class="fa fa-fw fa-stack-overflow"></i></a>&nbsp;&nbsp;&nbsp;&nbsp;
            <a href="https://soundcloud.com/schnommus" class="btn-social btn-outline" title="Soundcloud"><i class="fa fa-fw fa-soundcloud"></i></a>
        </div>
    </div>
    <a class="scroll-down icon-arrow-left" href="#content" data-offset="-45"><span class="hidden">Scroll Down</span></a>
    <script type="text/javascript">
        function fadeChain(elem) {
            if(elem) {
                $(elem).fadeIn('slow', function() {
                    fadeChain($(this).next());
                });
            }
        }

        window.onload = function() {
            $(".main-header-content").hide();
            $(".main-header-content").fadeIn('slow');
        }

    </script>
</header>

{{! The main content area on the homepage }}
<main id="content" class="content" role="main">

    {{! The tag below includes the post loop - partials/loop.hbs }}
    {{> "loop"}}

</main>
